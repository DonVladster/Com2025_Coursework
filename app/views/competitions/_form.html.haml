= form_for @competition do |f|
  - if @competition.errors.any?
    #error_explanation
      %h2= "#{pluralize(@competition.errors.count, "error")} prohibited this competition from being saved:"
      %ul
        - @competition.errors.full_messages.each do |message|
          %li= message

  .field
    -# user inputs the name of the competition 
    = f.label :name
    = f.text_field :name
  .field
    -# user inputs the date of the competition 
    = f.label :date
    = f.date_select :date
  .actions
    = f.submit 'Save'
