= form_for @athlete do |f|
  - if @athlete.errors.any?
    #error_explanation
      %h2= "#{pluralize(@athlete.errors.count, "error")} prohibited this athlete from being saved:"
      %ul
        - @athlete.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :sex
    = f.text_field :sex
  .field
    = f.label :age
    = f.number_field :age
  .field
    = f.label :weight
    = f.text_field :weight
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
