%h1 Listing athletes

%table
  %thead
    %tr
      %th Name
      %th Sex
      %th Age
      %th Weight
      %th Description
      %th
      %th
      %th

  %tbody
    - @athletes.each do |athlete|
      %tr
        %td= athlete.name
        %td= athlete.sex
        %td= athlete.age
        %td= athlete.weight
        %td= athlete.description
        %td= link_to 'Show', athlete
        %td= link_to 'Edit', edit_athlete_path(athlete)
        %td= link_to 'Destroy', athlete, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Athlete', new_athlete_path
