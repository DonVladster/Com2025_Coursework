= form_for @athlete_competition do |f|
  - if @athlete_competition.errors.any?
    #error_explanation
      %h2= "#{pluralize(@athlete_competition.errors.count, "error")} prohibited this athlete_competition from being saved:"
      %ul
        - @athlete_competition.errors.full_messages.each do |message|
          %li= message

  .field
    -# we allow the user to choose between the existing athletes  
    = f.label :athlete_id
    = f.select :athlete_id, options_for_select(@athletes.collect {|a| [ a.name, a.id ] }) 
  .field
    -# we allow the user to choose between the existing competitions
    = f.label :competition_id
    = f.select :competition_id, options_for_select(@competitions.collect {|c| [ c.name, c.id ] })
  .actions
    = f.submit 'Save'
