-# Determines how the contact page is showed to the user
%h1= t('.title')
%p= t('.contact_us')

-# A form that the user can input into to contact for help
=form_tag request_contact_path, method: 'post' do
    = label_tag :name, t('.name')
    = text_field_tag :name, '', title: t('.enter_name'), size: 30

    = label_tag :email, t('.email')
    = email_field_tag :email, '', title: t('.enter_email'), size: 30

    = label_tag :telephone, t('.telephone')
    = telephone_field_tag :telephone, '', title: t('.enter_telephone')

    = label_tag :message, t('.message')
    = text_field_tag :message, '', title: t('.enter_message'), size: 70

    = submit_tag t('.submit')